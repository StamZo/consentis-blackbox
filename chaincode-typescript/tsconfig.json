{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es2017",
        "moduleResolution": "node16",
        "module": "node16",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "types": ["node"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]
}
